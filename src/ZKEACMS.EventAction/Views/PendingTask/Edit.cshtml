@model ZKEACMS.EventAction.Models.PendingTaskEntity
@{
    Script.Reqiured("validate").AtFoot();
    Script.Reqiured("tinymce").AtFoot();
}

<div class="panel panel-default">
    <div class="panel-heading">
        @L("Edit")
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="toolBar">
                @if (Authorizer.Authorize(ZKEACMS.EventAction.PermissionKeys.ManageEventNotification))
                {
                    <input type="submit" class="btn btn-danger" value="@L("Retry")" data-value="@ActionType.UpdateAndExit" />
                }
                <input type="button" class="btn btn-default cancel" value="@L("Cancel")" />
            </div>
        }
    </div>
</div>